<view class="container">

 <view class="title">
    <image class="task-image" src="{{formInfo.imagePath}}" />
    <view class="title-text">{{formInfo.title}}</view>
  </view>


  <!--任务详情-->
  <view class="mobile-nav">
    <view class="mobile-nav__title">{{formInfo.itemContent}}</view>

    <!--单选框 -->
    <van-radio-group wx:if="{{formInfo.itemTypeIdx == 2}}" value="{{ radio }}" bind:change="radioOnChange">
      <van-cell-group>
        <van-cell title="单选框 1" clickable data-name="1" bind:click="onClick">
          <van-radio name="r1" />
        </van-cell>
        <van-cell title="单选框 2" clickable data-name="2" bind:click="onClick">
          <van-radio name="r2" />
        </van-cell>
      </van-cell-group>
    </van-radio-group>

    <!--输入框 -->
    <van-cell-group wx:if="{{formInfo.itemTypeIdx == 1}}">
      <van-field placeholder="请输入目标内容" bind:change="textOnChange" />
    </van-cell-group>

  </view>

<!--按钮组-->
  <van-row gutter="20" class="action-button">
    <van-col span="12">
      <van-button plain round="true" type="info" size="large" bindtap="saveProgress">
        <van-icon name="star-o" /> 暂存并返回</van-button>
    </van-col>
    <van-col span="12">
      <van-button plain round="true" type="info" size="large" bindtap="nextDataSource">
        <van-icon name="passed" /> 下一条</van-button>
    </van-col>
  </van-row>





</view>