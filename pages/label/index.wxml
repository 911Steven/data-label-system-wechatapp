<view class="container">

  <view class="title">
    <view class="title-text">情感倾向标注</view>
  </view>


  <!--任务详情-->
  <view class="mobile-nav">
    <view class="mobile-nav__title">请标注以下文本的情感倾向</view>
    <!--单选框 -->
    <van-radio-group value="{{ radio }}" bind:change="radioOnChange">
      <van-cell-group>
        <van-cell title="单选框 1" clickable data-name="1" bind:click="onClick">
          <van-radio name="r1" />
        </van-cell>
        <van-cell title="单选框 2" clickable data-name="2" bind:click="onClick">
          <van-radio name="r2" />
        </van-cell>
      </van-cell-group>
    </van-radio-group>
    <!--输入框 -->
    <van-cell-group>
      <van-field placeholder="请输入目标内容" bind:change="textOnChange" />
    </van-cell-group>
  </view>

  <van-row gutter="20" class="action-button">
    <van-col span="12">
      <van-button plain round="true" type="info" size="large" bindtap="collectTask">
        <van-icon name="star-o" /> 收藏任务</van-button>
    </van-col>
    <van-col span="12">
      <van-button plain round="true" type="info" size="large" bindtap="doTask">
        <van-icon name="passed" /> 开始任务</van-button>
    </van-col>
  </van-row>





</view>