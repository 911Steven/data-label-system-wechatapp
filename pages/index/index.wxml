<!--index.wxml-->
<view class="container">

  <view class="title">
    <van-icon name="fire" size="30px" class="title-icon" />
    <view class="title-text">标注微任务</view>
  </view>
  <view class="desc">轻量、可定制的数据标注系统</view>

  <!--统计概况-->
  <view class="mobile-nav">
    <van-cell-group>
      <van-cell title="已发布模版数" value="122" />
      <van-cell title="已发布任务数" value="233" />
    </van-cell-group>
  </view>

  <!--标签页-->
  <view class="mobile-nav">
    <view class="mobile-nav__title">数据标注类型</view>
    <van-tabs active="{{ tab_active }}" bind:change="formTabChange" sticky animated>
      <van-tab title="全部"></van-tab>
      <van-tab title="文本型"></van-tab>
      <van-tab title="图片型"></van-tab>
      <van-tab title="音频型"></van-tab>
    </van-tabs>
  </view>

  <!--任务模版列表-->
  <view class="task-list">

    <view class="mobile-nav">
      <van-card title="情感倾向标注" 
      num="2" 
      price="100" 
      desc="发布方： yulinying"
      tag="文本型"
      currency="剩余数："
      centered=true
      thumb="https://ws2.sinaimg.cn/large/006tKfTcly1g1hrpn5jogj302o02ot8o.jpg"/>
    </view>

    <view class="mobile-nav">
      <van-card title="情感倾向标注" 
      num="2" 
      price="100" 
      desc="发布方： yulinying"
      tag="图片型"
      currency="剩余数："
      centered=true
      thumb="https://ws2.sinaimg.cn/large/006tKfTcly1g1hrqbh6dnj302k02nq2q.jpg"/>
    </view>

    <view class="mobile-nav">
      <van-card title="情感倾向标注" 
      num="2" 
      price="100" 
      desc="发布方： yulinying"
      tag="音频型"
      currency="剩余数："
      centered=true
      thumb="https://ws1.sinaimg.cn/large/006tKfTcly1g1hrrimkzhj302o02o3ya.jpg"/>
    </view>

  </view>


  <!-- 导航 -->
  <van-tabbar active="{{ tar_bar_active }} " bind:change="barChange ">
    <van-tabbar-item icon="send-gift ">任务中心</van-tabbar-item>
    <van-tabbar-item icon="manager ">我的任务</van-tabbar-item>
  </van-tabbar>

</view>